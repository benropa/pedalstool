<div style="padding-left: 2%; padding-top:2%; padding-right: 2%; ">
  <div style="background-color:rgb(255, 255, 255);height:fit-content;width:fit-content;border-style: solid;border-width:2px;padding:3%;border-radius: 20px;">
    <div style="background-color:rgb(255, 255, 255);" class="row align-center mb-5">
      <div style="width:50%; font-size: 10%px; display:flex; align-items:center; justify-content:center; align-items:center; padding-bottom: 1%;" class="col-md-6">
          <h2>{{blogList.title}}</h2>
      </div>
      <div style="padding: 1%; width:80%; padding-left: 2%;"  class="col-md-6">
        <p>{{blogList.content}}</p>
      </div>
      {{#each blogList.comments as |comment| }}
      <div style="padding: 1%; width:80%; padding-left: 2%;" class="col-md-6">
        <p>{{ comment.content }}</p>
      </div>
      {{/each}}
    </div>
  </div>
</div>